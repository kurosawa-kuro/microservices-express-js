# PostgreSQL Configuration
POSTGRES_DB=postgres
POSTGRES_USER=cloud-shop
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Keycloak Database Configuration
KC_DB_USERNAME=cloud-shop
KC_DB_PASSWORD=your_secure_keycloak_db_password_here

# Keycloak Admin Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password_here

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_chars

# Service Ports
GATEWAY_PORT=8080
ACCOUNTS_PORT=8082
CARDS_PORT=8084
LOANS_PORT=8083
MESSAGE_PORT=8085

# Kafka Configuration
KAFKA_BROKER=kafka:9092

# Database URLs
DATABASE_URL_ACCOUNTS=postgresql://cloud-shop:${POSTGRES_PASSWORD}@postgres:5432/cloud-shop_accounts
DATABASE_URL_CARDS=postgresql://cloud-shop:${POSTGRES_PASSWORD}@postgres:5432/cloud-shop_cards
DATABASE_URL_LOANS=postgresql://cloud-shop:${POSTGRES_PASSWORD}@postgres:5432/cloud-shop_loans

# Keycloak Configuration
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=cloud-shop
KEYCLOAK_CLIENT_ID=cloud-shop-gateway
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here