generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cards {
  cardId          Int      @id @default(autoincrement()) @map("card_id")
  mobileNumber    String   @map("mobile_number")
  cardNumber      String   @unique @map("card_number")
  cardType        String   @map("card_type")
  totalLimit      Int      @map("total_limit")
  amountUsed      Int      @map("amount_used")
  availableAmount Int      @map("available_amount")
  createdAt       DateTime @default(now()) @map("created_at")
  createdBy       String   @map("created_by")
  updatedAt       DateTime @updatedAt @map("updated_at")
  updatedBy       String?  @map("updated_by")

  @@map("cards")
}
