generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  customerId   Int       @id @default(autoincrement()) @map("customer_id")
  name         String
  email        String    @unique
  mobileNumber String    @unique @map("mobile_number")
  createdAt    DateTime  @default(now()) @map("created_at")
  createdBy    String    @map("created_by")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  updatedBy    String?   @map("updated_by")
  accounts     Accounts[]

  @@map("customer")
}

model Accounts {
  customerId      Int      @map("customer_id")
  accountNumber   BigInt   @unique @map("account_number")
  accountType     String   @map("account_type")
  branchAddress   String   @map("branch_address")
  communicationSw Boolean? @default(false) @map("communication_sw")
  createdAt       DateTime @default(now()) @map("created_at")
  createdBy       String   @map("created_by")
  updatedAt       DateTime @updatedAt @map("updated_at")
  updatedBy       String?  @map("updated_by")
  customer        Customer @relation(fields: [customerId], references: [customerId], onDelete: Cascade)

  @@id([customerId, accountNumber])
  @@map("accounts")
}
